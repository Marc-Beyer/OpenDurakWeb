{
    "name": "open-durak-web",
    "version": "1.0.0",
    "description": "An webinterface for OpenDurak",
    "main": "index.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "tsc": "tsc",
        "tsc-watch": "tsc --watch",
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint . --fix --ext .ts",
        "sass": "sass --no-source-map sass:web/style --style compressed",
        "sass-watch": "sass --watch --no-source-map sass:web/style --style compressed",
        "watch": "npm run tsc-watch && npm run sass-watch"
    },
    "author": "Marc Beyer",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "typescript": "^4.5.5",
        "eslint": "^8.10.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-plugin-import": "^2.25.4",
        "sass": "^1.49.9"
    }
}
